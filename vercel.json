{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/src/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/shorts", "dest": "/backend/src/api/shorts.ts" },
    { "src": "/api/(.*)", "dest": "/backend/src/api/$1.ts" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
